                             // sn = Squared Number 
            var alleNummer = from l in lists // First select all lists within the list
                             from n in l// next itterate through each element in each individual collection
                             let sn = n * n// Square each number
                             where sn < 50// check if the sc var is less than 50.
                             select sn; // return all numbers that are less than 50.
            foreach (var n in alleNummer)
            {
                Console.WriteLine(n);
            }
            Console.ReadLine();
