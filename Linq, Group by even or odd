1. Code

int[] arrayOfNumbers = { 5, 6, 71, 28, 9, 6, 45, 7, 567, 34, 2, 6, 7, 8, 5, 3, 12, 34 };

var groupByEvenUndOdd = from n in arrayOfNumbers
                        let evenOrOdd = (n % 2 == 0) ? "Even" : "Odd"
                        orderby n
                        group n by evenOrOdd;

foreach (var key in groupByEvenUndOdd)
{
Console.WriteLine($"{key.Key}");
foreach (var item in key)
{
Console.WriteLine($"{item}");
}
}
